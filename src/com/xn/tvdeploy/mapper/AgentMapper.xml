<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xn.tvdeploy.dao.AgentDao">
    <!-- 属性映射 -->
    <resultMap type="com.xn.tvdeploy.model.AgentModel" id="dataMap">
        <id property="id" column="id" />
        <result property="accountNum" column="account_num" />
        <result property="passWd" column="pass_wd" />
        <result property="roleId" column="role_id" />
        <result property="agentName" column="agent_name" />
        <result property="contacts" column="contacts" />
        <result property="phoneNum" column="phone_num" />
        <result property="payType" column="pay_type" />
        <result property="totalMoney" column="total_money" />
        <result property="balance" column="balance" />
        <result property="royalty" column="royalty" />
        <result property="isEnable" column="is_enable" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="yn" column="yn" />
        <result property="roleName" column="role_name" />
    </resultMap>
    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.account_num,a.pass_wd,a.agent_name,a.contacts,a.phone_num,a.pay_type,a.total_money,a.balance,a.royalty,a.role_id,a.is_enable,
        a.create_time,a.update_time,a.yn,
        b.role_name
    </sql>

    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != 0 and id >0 " >
                and a.id = #{id}
            </if>
            <if test="accountNum != null and accountNum != '' " >
                and a.account_num = #{accountNum}
            </if>
            <if test="passWd != null and passWd != '' " >
                and a.pass_wd = #{passWd}
            </if>
            <if test="roleId != 0 and roleId >0 " >
                and a.role_id = #{roleId}
            </if>
            <if test="agentName != null and agentName != '' " >
                and a.agent_name = #{agentName}
            </if>
            <if test="isEnable != 0 and isEnable >0 " >
                and a.is_enable = #{isEnable}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != 0 and id >0 " >
                and a.id = #{id}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 查询总数-->
    <select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1)
        from tb_hz_agent a
        left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询分页列表 -->
    <select id="queryByList" resultMap="dataMap"  parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
        order by a.create_time desc
        limit #{startIndex},#{pageSize}
    </select>

    <!-- 查询列表-无分页-有条件/有条件 -->
    <select id="queryAllList" resultMap="dataMap"  parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
        order by a.create_time desc
    </select>

    <!-- 根据id查询记录 -->
    <select id="queryById"  resultMap="dataMap" parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause_id"/>
    </select>

    <!-- 根据条件查询记录 -->
    <select id="queryByCondition"  resultMap="dataMap" parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_hz_agent a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 添加记录 -->
    <insert id="add" parameterType="Object" >
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() as id
        </selectKey>
        insert into tb_hz_agent
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="accountNum != null and accountNum != '' " >
                account_num,
            </if>
            <if test="passWd != null and passWd != '' " >
                pass_wd,
            </if>
            <if test="agentName != null and agentName != '' " >
                agent_name,
            </if>
            <if test="roleId != 0 and roleId >0 " >
                role_id,
            </if>
            <if test="contacts != null and contacts != '' " >
                contacts,
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                phone_num,
            </if>
            <if test="payType != null and payType != '' " >
                pay_type,
            </if>
            <if test="royalty != null and royalty != '' " >
                royalty,
            </if>
            <if test="isEnable != 0 and isEnable >0 " >
                is_enable,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="accountNum != null and accountNum != '' " >
                <![CDATA[  #{accountNum}, ]]>
            </if>
            <if test="passWd != null and passWd != '' " >
                <![CDATA[  #{passWd}, ]]>
            </if>
            <if test="agentName != null and agentName != '' " >
                <![CDATA[  #{agentName}, ]]>
            </if>
            <if test="roleId != 0 and roleId >0 " >
                <![CDATA[  #{roleId}, ]]>
            </if>
            <if test="contacts != null and contacts != '' " >
                <![CDATA[  #{contacts}, ]]>
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                <![CDATA[  #{phoneNum}, ]]>
            </if>
            <if test="payType != null and payType != '' " >
                <![CDATA[  #{payType}, ]]>
            </if>
            <if test="royalty != null and royalty != '' " >
                <![CDATA[  #{royalty}, ]]>
            </if>
            <if test="isEnable != 0 and isEnable >0 " >
                <![CDATA[  #{isEnable}, ]]>
            </if>
            <![CDATA[  NOW(), ]]>
        </trim>
    </insert>


    <!-- 更新记录 -->
    <update id="update" parameterType="Object">
        UPDATE tb_hz_agent a
        <trim prefix="set" suffixOverrides=",">
            <if test="accountNum != null and accountNum != '' " >
                a.account_num = #{accountNum},
            </if>
            <if test="passWd != null and passWd != '' " >
                a.pass_wd = #{passWd},
            </if>
            <if test="roleId != 0 and roleId >0 " >
                a.role_id = #{roleId},
            </if>
            <if test="agentName != null and agentName != '' " >
                a.agent_name = #{agentName},
            </if>
            <if test="contacts != null and contacts != '' " >
                a.contacts = #{contacts},
            </if>
            <if test="phoneNum != null and phoneNum != '' " >
                a.phone_num = #{phoneNum},
            </if>
            <if test="payType != 0  and payType >0 " >
                a.pay_type = #{payType},
            </if>
            <if test="royalty != null and royalty != '' " >
                a.royalty = #{royalty},
            </if>
            <if test="isEnable != 0  and isEnable >0 " >
                a.is_enable = #{isEnable},
            </if>
            a.update_time = NOW(),
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>


    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_hz_agent a
        <trim prefix="set" suffixOverrides=",">
            <if test="isEnable != 0 and isEnable >0 " >
                a.is_enable=#{isEnable},
            </if>
            a.yn=#{yn},
            a.update_time=NOW()
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>

    <!--逻辑删除数据 -->
    <update id="delete" parameterType="java.lang.Long">
        UPDATE tb_hz_agent a set a.yn = 1,
        a.update_time = now()
        where 1=1
        and a.id =#{id}
        and a.yn=0
    </update>

</mapper>