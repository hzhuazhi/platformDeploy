<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xn.tvdeploy.dao.AccountDpDao">
    <!-- 属性映射 -->
    <resultMap type="com.xn.tvdeploy.model.AccountDpModel" id="dataMap">
        <id property="id" column="id" />
        <result property="accountNum" column="account_num" />
        <result property="passWd" column="pass_wd" />
        <result property="roleId" column="role_id" />
        <result property="acName" column="ac_name" />
        <result property="acContacts" column="ac_contacts" />
        <result property="acPhone" column="ac_phone" />
        <result property="acType" column="ac_type" />
        <result property="remark" column="remark" />
        <result property="isEnable" column="is_enable" />
        <result property="createUser" column="create_user" />
        <result property="updateUser" column="update_user" />
        <result property="createRole" column="create_role" />
        <result property="updateRole" column="update_role" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
        <result property="yn" column="yn" />
        <result property="roleName" column="role_name" />
    </resultMap>
    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.account_num,a.pass_wd,a.role_id,a.ac_name,a.ac_contacts,a.ac_phone,a.ac_type,
        a.remark,a.is_enable,a.create_user,a.update_user,a.create_role,a.update_role,a.create_time,a.update_time,a.yn,
        b.role_name
    </sql>

    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != 0 and id >0 " >
                and a.id = #{id}
            </if>
            <if test="accountNum != null and accountNum != '' " >
                and a.account_num = #{accountNum}
            </if>
            <if test="passWd != null and passWd != '' " >
                and a.pass_wd = #{passWd}
            </if>
            <if test="roleId != 0 and roleId >0 " >
                and a.role_id = #{roleId}
            </if>
            <if test="acName != null and acName != '' " >
                and a.ac_name = #{acName}
            </if>
            <if test="acContacts != null and acContacts != '' " >
                and a.ac_contacts = #{acContacts}
            </if>
            <if test="acPhone != null and acPhone != '' " >
                and a.ac_phone = #{acPhone}
            </if>
            <if test="acType != 0 and acType >0 " >
                and a.ac_type = #{acType}
            </if>
            <if test="isEnable != 0 and isEnable >0 " >
                and a.is_enable = #{isEnable}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != 0 and id >0 " >
                and a.id = #{id}
            </if>
            and a.yn =  0
        </trim>
    </sql>

    <!-- 查询总数-->
    <select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1)
        from tb_xn_account_dp a
        left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询分页列表 -->
    <select id="queryByList" resultMap="dataMap"  parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_xn_account_dp a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
        order by a.create_time desc
        limit #{startIndex},#{pageSize}
    </select>

    <!-- 查询列表-无分页-有条件/有条件 -->
    <select id="queryAllList" resultMap="dataMap"  parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_xn_account_dp a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
        order by a.create_time desc
    </select>

    <!-- 根据id查询记录 -->
    <select id="queryById"  resultMap="dataMap" parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_xn_account_dp a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause_id"/>
    </select>

    <!-- 根据条件查询记录 -->
    <select id="queryByCondition"  resultMap="dataMap" parameterType="Object">
        select
        <include refid="Base_Column_List" />
        from tb_xn_account_dp a left join tb_hz_sys_role b on a.role_id = b.role_id
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 添加记录 -->
    <insert id="add" parameterType="Object" >
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() as id
        </selectKey>
        insert into tb_xn_account_dp
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="accountNum != null and accountNum != '' " >
                account_num,
            </if>
            <if test="passWd != null and passWd != '' " >
                pass_wd,
            </if>
            <if test="roleId != 0 and roleId >0 " >
                role_id,
            </if>
            <if test="acName != null and acName != '' " >
                ac_name,
            </if>
            <if test="acContacts != null and acContacts != '' " >
                ac_contacts,
            </if>
            <if test="acPhone != null and acPhone != '' " >
                ac_phone,
            </if>
            <if test="acType != 0  and acType >0 " >
                ac_type,
            </if>
            <if test="remark != null and remark != '' " >
                remark,
            </if>
            <if test="isEnable != 0 and isEnable >0 " >
                is_enable,
            </if>
            <if test="createUser != 0 and createUser >0 " >
                create_user,
            </if>
            <if test="createRole != 0 and createRole >0 " >
                create_role,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="accountNum != null and accountNum != '' " >
                <![CDATA[  #{accountNum}, ]]>
            </if>
            <if test="passWd != null and passWd != '' " >
                <![CDATA[  #{passWd}, ]]>
            </if>
            <if test="roleId != 0 and roleId >0 " >
                <![CDATA[  #{roleId}, ]]>
            </if>
            <if test="acName != null and acName != '' " >
                <![CDATA[  #{acName}, ]]>
            </if>
            <if test="acContacts != null and acContacts != '' " >
                <![CDATA[  #{acContacts}, ]]>
            </if>
            <if test="acPhone != null and acPhone != '' " >
                <![CDATA[  #{acPhone}, ]]>
            </if>
            <if test="acType != 0  and acType >0 " >
                <![CDATA[  #{acType}, ]]>
            </if>
            <if test="remark != null and remark != '' " >
                <![CDATA[  #{remark}, ]]>
            </if>
            <if test="isEnable != 0 and isEnable >0 " >
                <![CDATA[  #{isEnable}, ]]>
            </if>
            <if test="createUser != 0 and createUser >0 " >
                <![CDATA[  #{createUser}, ]]>
            </if>
            <if test="createRole != 0 and createRole >0 " >
                <![CDATA[  #{createRole}, ]]>
            </if>
            <![CDATA[  NOW(), ]]>
        </trim>
    </insert>


    <!-- 更新记录 -->
    <update id="update" parameterType="Object">
        UPDATE tb_xn_account_dp a
        <trim prefix="set" suffixOverrides=",">
            <if test="accountNum != null and accountNum != '' " >
                a.account_num = #{accountNum},
            </if>
            <if test="passWd != null and passWd != '' " >
                a.pass_wd = #{passWd},
            </if>
            <if test="roleId != 0 and roleId >0 " >
                a.role_id = #{roleId},
            </if>
            <if test="acName != null and acName != '' " >
                a.ac_name = #{acName},
            </if>
            <if test="acContacts != null and acContacts != '' " >
                a.ac_contacts = #{acContacts},
            </if>
            <if test="acPhone != null and acPhone != '' " >
                a.ac_phone = #{acPhone},
            </if>
            <if test="acType != 0  and acType >0 " >
                a.ac_type = #{acType},
            </if>
            <if test="remark != null and remark != '' " >
                a.remark = #{remark},
            </if>
            <if test="isEnable != 0  and isEnable >0 " >
                a.is_enable = #{isEnable},
            </if>
            <if test="updateUser != 0 and updateUser >0 " >
                a.update_user = #{updateUser},
            </if>
            <if test="updateRole != 0 and updateRole >0 " >
                a.update_role = #{updateRole},
            </if>
            a.update_time = NOW(),
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>


    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_xn_account_dp a
        <trim prefix="set" suffixOverrides=",">
            <if test="isEnable != 0 and isEnable >0 " >
                a.is_enable=#{isEnable},
            </if>
            a.yn=#{yn},
            <if test="updateUser != 0 and updateUser >0 " >
                a.update_user=#{updateUser},
            </if>
            <if test="updateRole != 0 and updateRole >0 " >
                a.update_role=#{updateRole},
            </if>
            a.update_time=NOW()
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>

    <!--逻辑删除数据 -->
    <update id="delete" parameterType="java.lang.Long">
        UPDATE tb_xn_account_dp a set a.yn = 1,
        <if test="updateUser != 0 and updateUser >0 " >
            a.update_user=#{updateUser},
        </if>
        <if test="updateRole != 0 and updateRole >0 " >
            a.update_role=#{updateRole},
        </if>
        a.update_time = now()
        where 1=1
        and a.id =#{id}
        and a.yn=0
    </update>

</mapper>